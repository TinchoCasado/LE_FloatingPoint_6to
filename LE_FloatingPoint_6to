#include <stdio.h>
#define cant_man 22
#define cant_exp 7
#define bits_man 23
#define bits_exp 8
#define bits_sig 1

void mascara(void);

union coma{
    struct{
        unsigned int mantisa : bits_man;
        unsigned int exponente : bits_exp;
        unsigned int signo : bits_sig;
    };
    float num;
};

int main(void) {
    mascara();
    return 0;
}

void mascara(void)
{
    union coma u;
    printf("Bienvenido, ingrese su nÃºmero: ");
    scanf("%f", &u.num);
    if (u.signo & 0x01) printf("1"); // Imprimo el exponente
    else printf("0");
    for(int n=cant_exp;n>=0;n--) // Recorro e imprimo el exponente
    {
        if ((u.exponente>>n & 0x01)==1) printf("1");
        else printf("0");
    }
    for(int n=cant_man;n>=0;n--) // Recorro e imprimo la mantisa
    {
        if ((u.mantisa>>n & 0x01)==1) printf("1");
        else printf("0");
    }
}
